<?xml version="1.0" encoding="UTF-8" ?>
<panel size="1024,700" minimumSize="1024,700" layout="BorderLayout">
	<hbox constraints="BorderLayout.NORTH">
		<panel id="charFieldPanelContainer" border="EmptyBorder(10,10,10,10)" layout="BorderLayout">
		</panel>
		<panel id="termInfoPanelContainer" border="EmptyBorder(10,10,10,10)" layout="BorderLayout">
		</panel>
	</hbox>
	<panel constraints="BorderLayout.CENTER" layout="GridBagLayout">
	    <scrollpane>
	    	<gridbagconstraints gridx="0" gridy="0" weightx="1" weighty="1" fill="GridBagConstraints.BOTH" insets="10,10,0,10"/>
	        <table id="characterTemplateTable"/>
	    </scrollpane>
	    <panel id="buttonPanel">
	    	<gridbagconstraints gridx="0" gridy="1" weightx="1" insets="10,10,10,10"/>
	        <button id="addButton" text="New" action="addNewCharacter"/>
	        <button id="deleteButton" text="Delete" action="deleteSelectedCharacters"/>
	        <button id="copyButton" text="Copy" action="duplicateSelectedCharacters"/>
	        <button id="undoButton" text="Undo" action="undo"/>
	        <button id="invertSelectionButton" text="Invert Marked" action="invertMarkedCharacters"/>
	        <button id="generateButton" text="Generate Characters" action="generateCharacters"/>
	    </panel>
	</panel>
</panel>